@model BUS.Models.Ticket

@{
    ViewBag.Title = "Delete Ticket";
    Layout = "~/Views/Shared/Customer.cshtml"; // Assuming you have a layout for customer views
}

<div class="container mt-4">
    <h2 class="text-center">Delete Ticket</h2>

    <h3 class="text-danger">Are you sure you want to delete this ticket?</h3>
    <div class="bg-light p-4 rounded shadow-sm border border-danger">
        <h4>Ticket Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.C_ID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.C_ID)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.BUS_ID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.BUS_ID)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SEAT_NUMBER)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SEAT_NUMBER)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.JOURNEY_DATE)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.JOURNEY_DATE)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PRICE)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PRICE)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions text-center mt-4">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                @Html.ActionLink("Back to List", "BookingHistory", null, new { @class = "btn btn-secondary btn-lg" })
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background for contrast */
    }

    h2 {
        color: #333; /* Dark text color */
    }

    h3.text-danger {
        margin-top: 20px; /* Space above the confirmation message */
    }

    .bg-light {
        background-color: #f1f1f1; /* Light background for the ticket information section */
    }

    .border {
        border: 2px solid #dc3545; /* Red border color */
    }

    .form-actions {
        margin-top: 20px; /* Space above the action buttons */
    }

    .btn-danger {
        margin-right: 10px; /* Space between buttons */
    }

    .btn-secondary {
        background-color: #6c757d; /* Secondary button color */
        color: white; /* White text for better contrast */
    }

    .text-center {
        margin-top: 20px; /* Space above the action link */
    }

    .btn-lg {
        padding: 10px 20px; /* Larger padding for better button size */
        font-size: 1.25rem; /* Larger font for better readability */
    }

    dt {
        font-weight: bold; /* Make dt bold for better visibility */
    }

    dd {
        margin-bottom: 15px; /* Space between definitions */
    }
</style>
