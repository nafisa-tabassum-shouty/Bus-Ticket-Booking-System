@model IEnumerable<BUS.Models.Schedule>

@{
    ViewBag.Title = "Schedule Management";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Schedule Management</h2>

    <p class="text-center">
        @Html.ActionLink("Create New Schedule", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().BUS_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ROUTE_ID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DEPARTURE_TIME)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ARRIVAL_TIME)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BUS_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.ROUTE_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.DEPARTURE_TIME)</td>
                        <td>@Html.DisplayFor(modelItem => item.ARRIVAL_TIME)</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.SCHEDULE_ID }, new { @class = "btn btn-warning btn-sm" }) |
                         
                            @Html.ActionLink("Delete", "Delete", new { id = item.SCHEDULE_ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    h2 {
        color: #333;
    }

    .table {
        margin-top: 20px;
        font-size: 16px;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .btn-primary {
        margin-bottom: 15px;
    }

    .btn-sm {
        padding: 5px 10px;
    }

    .text-center {
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
